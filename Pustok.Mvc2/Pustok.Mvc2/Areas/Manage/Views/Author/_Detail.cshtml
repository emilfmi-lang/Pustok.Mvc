@model Author

<div class="modal-header">
    <h5 class="modal-title">Author Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="card">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4">
                    <strong>ID:</strong>
                </div>
                <div class="col-md-8">
                    <span class="badge badge-primary">@Model.Id</span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <strong>Full Name:</strong>
                </div>
                <div class="col-md-8">
                    @Model.FullName
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <strong>Total Books:</strong>
                </div>
                <div class="col-md-8">
                    <span class="badge badge-info">@(Model.Books?.Count ?? 0)</span>
                </div>
            </div>
            
            @if (Model.Books != null && Model.Books.Any())
            {
                <hr />
                <h6 class="font-weight-bold text-primary mb-3">Books by this Author:</h6>
                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead class="thead-light">
                            <tr>
                                <th>ID</th>
                                <th>Book Name</th>
                                <th>Code</th>
                                <th>Price</th>
                                <th>In Stock</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var book in Model.Books)
                            {
                                <tr>
                                    <td>@book.Id</td>
                                    <td>@book.Name</td>
                                    <td><code>@book.Code</code></td>
                                    <td>$@book.Price.ToString("F2")</td>
                                    <td>
                                        @if (book.InStock)
                                        {
                                            <span class="badge badge-success">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">No</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <hr />
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> This author has no books yet.
                </div>
            }
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">
        <i class="fas fa-edit"></i> Edit
    </a>
</div>
