using Microsoft.AspNetCore.Mvc;
using Microsoft.EntityFrameworkCore;
using Pustok.Mvc2.Data;
using Pustok.Mvc2.ViewModels;

namespace Pustok.Mvc2.Controllers
{
    public class BooksController(AppDbContext appDbContext) : Controller
    {
        public IActionResult Details(int id)
        {
            var book = appDbContext.Books
                .Include(x => x.BookImages)
                .Include(x => x.Author)
                .Include(x => x.BookTags)
                    .ThenInclude(bt => bt.Tag)
                .FirstOrDefault(b => b.Id == id);
                
            if (book == null)
                return NotFound();
                
            var bookDetailVm = new BookDetailVm
            {
                Name = book.Name,
                Price = book.Price,
                Code = book.Code,
                InStock = book.InStock,
                IsFeatured = book.IsFeatured,
                IsNew = book.IsNew,
                Description = book.Description,
                DiscountPercent = book.DiscountPercent,
                MainImageUrl = book.MainImageUrl,
                HoverImageUrl = book.HoverImageUrl,
                AuthorId = book.AuthorId,
                AuthorName = book.Author.FullName,
                TagNames = book.BookTags.Select(bt => bt.Tag.Name).ToList(),
                BookImageUrls = book.BookImages.Select(bi => bi.ImageUrl).ToList()
            };
            
            BookVm bookVm = new BookVm
            {
                Book = bookDetailVm,
                RelatedBooks = appDbContext.Books
                .Include(x => x.Author)
                .Include(x => x.BookImages)
                .Where(b => b.AuthorId == book.AuthorId && b.Id != book.Id)
                .Take(4)
                .ToList()

            };
            //return View(bookVm);
            return Ok(bookDetailVm);
        }

        public IActionResult BookModal(int id)
        {
            var book = appDbContext.Books
                .Include(x => x.BookImages)
                .Include(x => x.Author)
                .Include(x => x.BookTags)
                    .ThenInclude(bt => bt.Tag)
                .FirstOrDefault(b => b.Id == id);
            if (book == null)
                return NotFound();
            return PartialView("_BookModalPartial", book);
        }

    }
}
