@model List<Slider>
@{
    ViewData["Title"] = "Slider List";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Slider Management</h1>
    <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Add New Slider
    </a>
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Slider List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Button Text</th>
                        <th>Button URL</th>
                        <th>Order</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var slider in Model)
                        {
                            <tr>
                                <td>@slider.Id</td>
                                <td>
                                    <img src="~/assests/image/bg-images/@slider.ImageUrl" alt="@slider.Title" 
                                         style="width: 80px; height: 50px; object-fit: cover;" />
                                </td>
                                <td>@Html.Raw(slider.Title.Length > 30 ? slider.Title.Substring(0, 30) + "..." : slider.Title)</td>
                                <td>@(slider.Description.Length > 40 ? slider.Description.Substring(0, 40) + "..." : slider.Description)</td>
                                <td>@slider.ButtonText</td>
                                <td>
                                    <a href="@slider.ButtonUrl" target="_blank" class="text-primary">
                                        @(slider.ButtonUrl.Length > 30 ? slider.ButtonUrl.Substring(0, 30) + "..." : slider.ButtonUrl)
                                    </a>
                                </td>
                                <td>
                                    <span class="badge badge-info">@slider.Order</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Detail" asp-route-id="@slider.Id" 
                                           class="btn btn-info btn-sm" 
                                           title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Update" asp-route-id="@slider.Id" 
                                           class="btn btn-warning btn-sm" 
                                           title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@slider.Id" 
                                           class="btn btn-danger btn-sm" 
                                           title="Delete"
                                           onclick="return confirm('Are you sure you want to delete this slider?');">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center">
                                <div class="alert alert-info mb-0" role="alert">
                                    <i class="fas fa-info-circle"></i> No sliders found. 
                                    <a asp-action="Create" class="alert-link">Add your first slider</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
