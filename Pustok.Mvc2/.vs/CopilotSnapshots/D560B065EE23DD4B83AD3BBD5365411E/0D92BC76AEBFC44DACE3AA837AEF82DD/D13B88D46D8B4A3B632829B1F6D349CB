                        <th style="width: 120px;">Books Count</th>
                        <th style="width: 200px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var author in Model)
                        {
                            <tr>
                                <td>@author.Id</td>
                                <td>@author.FullName</td>
                                <td class="text-center">
                                    <span class="badge badge-info">@(author.Books?.Count ?? 0)</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Detail" asp-route-id="@author.Id" class="btn btn-info btn-sm"
                                            title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Update" asp-route-id="@author.Id" class="btn btn-warning btn-sm"
                                            title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@author.Id" class="btn btn-danger btn-sm"
                                            title="Delete"
                                            onclick="return confirm('Are you sure you want to delete this author?');">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">
